<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.WithinCircle" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- 设置状态栏颜色 -->
        <item name="android:statusBarColor">@android:color/black</item>
    </style>
    <style name="Theme.App.SplashScreen" parent="Theme.SplashScreen">
        <!--背景颜色-->
        <item name="windowSplashScreenBackground">@color/splash_dark_bg_color</item>
        <!--设置启动页图片-->
        <item name="windowSplashScreenAnimatedIcon">@drawable/splash_logo</item>
        <!--设置闪屏也后启动页面的主题-->
        <item name="postSplashScreenTheme">@style/Theme.WithinCircle</item>
        <item name="android:windowSplashScreenBrandingImage">@drawable/brand</item>
    </style>
</resources>